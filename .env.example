# GPU Mining Automation - Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# WALLET ADDRESSES
# ======================
# Kaspa Wallet Address
KASPA_WALLET=kaspa:your_kaspa_wallet_address_here

# Ravencoin Wallet Address
RVN_WALLET=RYourRavencoinWalletAddressHere

# Zcash Wallet Address
ZEC_WALLET=t1YourZcashWalletAddressHere

# Ethereum Classic Wallet Address
ETC_WALLET=0xYourEthereumClassicWalletAddressHere

# ======================
# MINING POOL SETTINGS
# ======================
# Default Pool URL (can be overridden per coin)
POOL_URL=stratum+tcp://pool.woolypooly.com:3112

# Worker/Rig Name
WORKER_NAME=miner01

# Default Coin to Mine
COIN=KAS

# Payout Threshold
PAYOUT_THRESHOLD=10

# ======================
# GPU RENTAL PLATFORM API KEYS
# ======================
# VastAI API Key
VASTAI_API_KEY=your_vastai_api_key_here

# RunPod API Key
RUNPOD_API_KEY=your_runpod_api_key_here

# ======================
# PROFITABILITY APIs
# ======================
# WhatToMine API Key (optional, for enhanced data)
WHATTOMINE_API_KEY=your_whattomine_api_key_here

# CoinGecko API Key (optional, for price data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# ======================
# MINING CONFIGURATION
# ======================
# Power Cost (USD per kWh)
POWER_COST_USD_PER_KWH=0.05

# Target Algorithm
TARGET_ALGO=KAWPOW

# Mining Intensity (low, medium, high)
MINING_INTENSITY=high

# GPU Temperature Limit (Celsius)
GPU_TEMP_LIMIT=75

# ======================
# AUTOMATION SETTINGS
# ======================
# Auto-switch to most profitable coin (true/false)
AUTO_SWITCH_COIN=true

# Profitability check interval (minutes)
PROFIT_CHECK_INTERVAL=30

# Minimum profit margin to switch coins (percentage)
MIN_PROFIT_MARGIN=5

# Auto-rent GPU when profitable (true/false)
AUTO_RENT_GPU=false

# Maximum hourly cost for GPU rental (USD)
MAX_GPU_RENTAL_COST=2.50

# ======================
# LOGGING & MONITORING
# ======================
# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable monitoring dashboard (true/false)
ENABLE_DASHBOARD=true

# Dashboard Port
DASHBOARD_PORT=8080

# ======================
# NOTIFICATIONS (Optional)
# ======================
# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook URL
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ======================
# ADVANCED SETTINGS
# ======================
# Restart backoff time (seconds)
RESTART_BACKOFF=10

# Miner binary path (optional override)
# MINER_BIN=/usr/local/bin/lolMiner

# Enable failover pools (true/false)
ENABLE_FAILOVER=true

# Database URL (for persistent storage)
DATABASE_URL=sqlite:///data/mining.db
